<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ubike" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- NoActionBar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="my_style">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.18</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="label_text">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#B5CC22</item>
    </style>
    <style name="my_style_2">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.18</item>
        <item name="android:textColor">#B5CC22</item>
    </style>
    <style name="my_style_3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>
</resources>